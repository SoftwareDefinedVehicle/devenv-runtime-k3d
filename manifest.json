            "entrypoint": "./src/runtime/start.sh",
            "termination": "./src/runtime/stop.sh",
            "variables": [
                {
                    "name": "myVar",
                    "type": "string",
                    "description": "some basic description"
                }
            ]
        },
        {
            "type": "deployment",
            "entrypoint": "./src/deployment/start.sh",
            "termination": "./src/deployment/stop.sh",
            "variables": [
                {
                    "name": "myVar",
                    "type": "string",
                    "description": "some basic description"
                }
            ]
        }
    ]
}
